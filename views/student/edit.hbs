<div class="container text-center mt-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/student/edit/{{students._id}}" method="post">
        <h1 class="text text-primary mt-2 mb-2">Add new students</h1>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="name">Full name</label>
            <input type="text" class="form-control" name="name" value="{{students.name}}" required minlength="3"
                maxlength="30">
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Birth year</label>
            <input type="number" class="form-control" name="birth_year" value="{{students.birth_year}}" required
                min="1900" max="2023">
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Grade</label>
            <input type="text" class="form-control" name="grade" value="{{students.grade}}" required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Gender</label> <br>
            {{#equal students.gender "Male" }}
            <input type="radio" name="gender" id="" value="Male" checked>Male
            <input type="radio" name="gender" id="" value="Female">Female
            {{/equal }}
            {{#equal students.gender "Female" }}
            <input type="radio" name="gender" id="" value="Male">Male
            <input type="radio" name="gender" id="" value="Female" checked>Female
            {{/equal }}
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Email</label>
            <input type="email" class="form-control" name="email" value="{{students.email}}" required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label> <br>
            <img src="{{students.image}}" width="100" height="150" alt="">
            <input type="text" class="form-control" name="image" value="{{students.image}}" required>
        </div>
        <div class="form-group mt-2 mb-2">

            <input type="submit" class="btn btn-danger" name="submit" value="Edit">
        </div>
    </form>
</div>