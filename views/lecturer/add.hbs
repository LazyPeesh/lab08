<div class="container text-center mt-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/lecturer/add" method="post">
        <h1 class="text text-primary mt-2 mb-2">Add new lecturer</h1>
        <div class="form-group mt-2 mb-2">
            <label for="">Full name</label>
            <input type="text" class="form-control" name="name" required minlength="3" maxlength="30">
        </div>
        <div class="form-group mt-2 mb-2">
            <label for="">Birth year</label>
            <input type="number" class="form-control" name="birth_year" required min="1900" max="2023">
        </div>
        <div class="form-group mt-2 mb-2">
            <label for="">Course</label>
            <input type="text" class="form-control" name="course" required >
        </div>
        <div class="form-group mt-2 mb-2">
            <label for="">Gender</label> <br>
            <input type="radio" name="gender" id="" value="Male">Male
            <input type="radio" name="gender" id="" value="Female">Female
        </div>
        <div class="form-group mt-2 mb-2">
            <label for="">Email</label>
            <input type="email" class="form-control" name="email" required >
        </div>
        <div class="form-group mt-2 mb-2">
            <label for="">Image</label>
            <input type="text" class="form-control" name="image" required >
        </div>
        <div class="form-group mt-2 mb-2">
           
            <input type="submit" class="btn btn-danger" name="submit" value="Add" >
        </div>
    </form>
</div>